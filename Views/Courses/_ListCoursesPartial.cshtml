
@model IEnumerable<CodeninModel.AssignCourseCategory>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}
<br />
<br />




<div class="row" data-toggle="isotope" style="position: relative; height: 672.834px;">
    @foreach (var course in Model)
    {
        <div class="item col-xs-12 col-sm-6 col-lg-4" style="position: absolute; left: 0px; top: 0px;">
            <div class="panel panel-default paper-shadow" data-z="0.5">
                <div class="panel-heading">
                    <div class="media media-clearfix-xs-min v-middle">
                        <div class="media-body text-caption text-light">
                            @course.Courses.Modules.Count Modules
                        </div>
                        <!--<div class="media-right">
                            <div class="progress progress-mini width-100 margin-none">
                                <div class="progress-bar progress-bar-grey-600" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:75%;">
                                </div>
                            </div>
                        </div>-->
                    </div>
                </div>
                <div class="cover overlay cover-image-full hover" style="height: 100px;">
                    <span class="img icon-block height-100 bg-default"></span>
                    <a href="app-take-course.html" class="padding-none overlay overlay-full icon-block bg-default" style="height: 100px;">
                        <span class="v-center">
                            <i class="fa fa-github"></i>
                        </span>
                    </a>
                    <a href="app-take-course.html" class="overlay overlay-full overlay-hover overlay-bg-white" style="height: 100px;">
                        <span class="v-center">
                            <span class="btn btn-circle btn-white btn-lg"><i class="fa fa-graduation-cap"></i></span>
                        </span>
                    </a>
                </div>
                <div class="panel-body">
                    <h4 class="text-headline margin-v-0-10"><a href="@Url.Action("CategoryContent","Courses",new{id = course.CourseCategoryId})">@course.Courses.CourseName</a></h4>
                </div>
                <hr class="margin-none">
                <div class="panel-body">
                    <a class="btn btn-white btn-flat paper-shadow relative" data-z="0" data-hover-z="1" data-animated="" href="@Url.Action("CategoryContent","Courses", new {id = course.CourseId})">Go to course</a>
                </div>
            </div>
        </div>
    }
  

</div>
<ul class="pagination margin-top-none">
    <li class="disabled"><a href="#">«</a></li>
    <li class="active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">»</a></li>
</ul>

