@model IEnumerable<CodeninModel.PaymentType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBoard.cshtml";
    }

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentTypeValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentTypeValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaymentTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PaymentTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaymentTypeId })
        </td>
    </tr>
}

</table>
