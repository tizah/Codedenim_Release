            data: data,
            success: function (data) {
                if (data.status) {
                    $('#CreateTopics').modal("hide");
                    $('#myform')[0].reset();
                    toastr["success"](data.message);
                } else {
                    //$('#actionsList').modal("hide");
                    toastr["error"]("required field where not completed");
                }

            }
        });
        setTimeout(function(){
            window.location.reload(1);
        }, 1000);
    });


</script>