                @Html.DisplayFor(modelItem => item.Option4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionHint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFillInTheGag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMultiChoiceAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSingleChoiceAnswer)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TopicQuizId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TopicQuizId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopicQuizId })
            </td>
        </tr>
    }

</table>
</div>




