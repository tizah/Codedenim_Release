        <th>
            @Html.DisplayNameFor(model => model.QuestionHint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFillInTheGag)
        </th>
