@{
    ViewBag.Title = "Tutor DashBoard";
    ViewBag.Role = "TUTOR";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-sm-6">
                <div class="card mycard">
                    <div class="content">
                        <div class="row">
