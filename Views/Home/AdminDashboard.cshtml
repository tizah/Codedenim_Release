                                    <h4 class="text-headline margin-none">Transactions</h4>
                                    <p class="text-subhead text-light">Latest from statement</p>
                                </div>
                                <div class="media-right">
                                    <a class="btn btn-white btn-flat" href="@Url.Action("PaymentDetails", "Home")">Statement</a>
                                    @*@Html.ActionLink("Statement", "PaymentDetails", "Home")*@
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table text-subhead v-middle">
                                <tbody>
                                    <tr class="alert alert-success bold">
                                        <td class="width-100 text-caption">
                                            <div class="width-80 text-center bold">Payment Date</div>
                                        </td>
                                        <td>Name</td>
                                        <td class="width-80 text-center">ReferenceNo</td>
                                        <td class="width-50 text-center">Payment Staus</td>
                                    </tr>
                                    @foreach (var transaction in @Model.PaymentDetails)
    {

                                <tr>
                                    <td class="width-100 text-caption">
                                        <div class="label label-grey-200 label-xs">@transaction.PaymentDate</div>
                                    </td>
                                    <td>@transaction.FullName</td>
                                    <td class="width-80 text-center">@transaction.ReferenceNo</td>
                                    <td class="width-50 text-center">@transaction.PaymentStatus</td>
                                </tr>


}
                                </tbody>
                            </table>
                        </div>
                    </div>
